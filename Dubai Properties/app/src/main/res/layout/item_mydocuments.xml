<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_parent"
    android:layout_marginTop="3dp">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/ll_download"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="0dp"
        >
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"

      android:layout_gravity="center_vertical"
      android:background="@drawable/documents_icon"/>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:layout_marginLeft="20dp"
    >
        <TextView
            android:id="@+id/tv_displayname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/helveticaneue_bold"
            android:textColor="#253746"
            android:text="Ejari Document"
            />
    <TextView
        android:id="@+id/tv_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#929ba2"
        android:lineSpacingExtra="6sp"
        android:text="364-1985-9462736-7"
        />
    <TextView
        android:id="@+id/tv_expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="5dp"
        android:textColor="#929ba2"
        android:textSize="12sp"
        android:lineSpacingExtra="6sp"
        android:visibility="gone"
        />
</LinearLayout>
    </LinearLayout>

<View
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="15dp"
    android:background="#e9eaec"/>
<LinearLayout
    android:background="#fff"

    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_marginRight="0dp"
    android:padding="3dp"

    >


    <ImageView
        android:id="@+id/iv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/upload_small"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:visibility="visible"
        android:layout_gravity="center"
        android:textColor="#6989a4"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="7sp"
        android:text="Upload"
        />

    <ImageView
        android:id="@+id/iv_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/download_small"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tv_download"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="#6989a4"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:lineSpacingExtra="7sp"
        android:text="Download"
        />

    <TextView
        android:id="@+id/tv_attach"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="#6989a4"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:lineSpacingExtra="7sp"
        android:text="Download"
        />
    <TextView
        android:id="@+id/tv_haAttach"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="#6989a4"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:lineSpacingExtra="7sp"
        android:text="Download"
        />

</LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document uploaded successfully. Review in progress."
            android:visibility="visible"
            android:paddingLeft="0dp"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
android:layout_marginBottom="15dp"
            android:background="#f7f7f7"
            android:textColor="@color/green_color"/>
</LinearLayout>


<LinearLayout
    android:id="@+id/ll_upload"
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_upload_inner"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:visibility="visible"
        android:padding="20dp"
        android:layout_marginBottom="5dp">

<ImageView
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/upload_big"/>


        <TextView
            android:id="@+id/tv_document_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final EMPOWER receipt"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/light_text_color"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_status_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document uploaded successfully. Review in progress."
        android:visibility="gone"
        android:paddingLeft="0dp"
        android:background="#f7f7f7"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/green_color"/>
</LinearLayout>

</LinearLayout>