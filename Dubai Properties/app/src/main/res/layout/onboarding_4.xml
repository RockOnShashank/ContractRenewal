<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/first_slide">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="AT YOUR FINGERTIPS"
            android:layout_marginTop="13dp"
            android:textColor="#da291c"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="16sp"
            android:textSize="24sp" />

        <TextView
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="7.2sp"
            android:text="One stop to raise requests and solve all your issues"
            android:textColor="#585d63"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="236dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64.4dp"
            android:src="@drawable/onboarding_4_image" />

    </LinearLayout>


</RelativeLayout>