<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_parent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/helveticaneue_bold"
                    android:text="Maintenance Request"
                    android:textColor="#585d63"
                    android:textSize="18sp"

                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#929ba2"
                    android:visibility="gone"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_parent_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/tv_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helveticaneue_medium"
                                    android:text="AC Issue"
                                    android:textColor="@color/title_text_color"
                                    android:textSize="@dimen/child_text_Size" />

                                <TextView
                                    android:id="@+id/tv_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"

                                    android:text="SR # id"
                                    android:textColor="@color/light_text_color" />


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_linksrid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/tv_category1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helveticaneue_medium"
                                    android:text="AC Issue"
                                    android:visibility="gone"
                                    android:textColor="@color/title_text_color"
                                    android:textSize="@dimen/child_text_Size" />

                                <TextView
                                    android:id="@+id/tv_new_srid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"

                                    android:text="SR # id"
                                    android:textColor="@color/light_text_color" />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="#fff">


                                <TextView
                                    android:id="@+id/tv_subCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Water Leak"
                                    android:textColor="@color/title_text_color" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right">


                                    <TextView
                                        android:id="@+id/tv_request_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Open"
                                        android:textColor="#f7971e" />

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/dotted_line"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="04/07/18"
                                    android:textColor="@color/light_text_color" />

                                <TextView
                                    android:id="@+id/tv_preferred_dateandtime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:text=""
                                    android:textColor="@color/light_text_color" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="#fff">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Created On"
                                    android:textColor="@color/title_text_color" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right">


                                    <TextView
                                        android:id="@+id/tv_schedule"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Scheduled On"
                                        android:textColor="@color/title_text_color" />

                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/helveticaneue_bold"
                                android:text="Description"
                                android:textColor="#333f48"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="#333f48"
                                android:textSize="14sp" />


                            <TextView
                                android:id="@+id/tv_tag_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:visibility="gone"
                                android:fontFamily="@font/helveticaneue_bold"
                                android:text="Tagged Location"
                                android:textColor="#333f48"
                                android:textSize="14sp" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/iv_loc"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/location_icons"/>
                                <TextView
                                    android:id="@+id/tv_tag_location_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:visibility="gone"
                                    android:text="qwewet"
                                    android:textColor="#333f48"
                                    android:textSize="14sp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_attached_pictures"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/helveticaneue_bold"
                                android:text="Attached Pictures"
                                android:textColor="#333f48"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/ll_pictures"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:visibility="visible"
                                android:weightSum="3">

                                <ImageView
                                    android:id="@+id/iv_1"
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    />

                                <ImageView
                                    android:id="@+id/iv_2"

                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    />

                                <ImageView
                                    android:id="@+id/iv_3"

                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_show_follow_comments"
                                android:layout_width="wrap_content"
                                android:padding="5dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/helveticaneue_medium"
                                android:text="SHOW FOLLOW-UP COMMENTS"
                                android:textColor="@color/blue_text_color"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/vertical_line"

                    ></View>

                <LinearLayout
                    android:id="@+id/ll_child_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_follow_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="FOLLOW-UP"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/vertical_line" />


                    <TextView
                        android:id="@+id/tv_reschedule"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="RESCHEDULE"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/vertical_line" />

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="CANCEL"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_follow_up_message"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="* You have recently followed-up, or request is still in progress."

                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_reschedule_message"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Cancellation not allowed for this request"

                />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>