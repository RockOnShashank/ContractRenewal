<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#101820"
    android:text="Please upload documents in jpg/pdf format. Individual document size should not exceed 5 MB"/>

        <TextView
            android:id="@+id/tv_no_documents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="#101820"
            android:visibility="gone"
            android:layout_gravity="center"
            android:fontFamily="@font/helveticaneue_medium"
            android:gravity="center"
            android:text="No Documents"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_documents"
            android:background="#f7f7f7"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>