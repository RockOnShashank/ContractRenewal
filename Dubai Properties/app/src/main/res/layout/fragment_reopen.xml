<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/helveticaneue_bold"
            android:text="Maintenance Request"
            android:textColor="#585d63"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:text="AC Issue"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/child_text_Size" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"

                    android:text="SR # id"
                    android:textColor="@color/light_text_color" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff">


                <TextView
                    android:id="@+id/tv_subCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Leak"
                    android:textColor="@color/title_text_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right">


                    <TextView
                        android:id="@+id/tv_request_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:textColor="#f7971e" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/dotted_line"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04/07/18"
                    android:textColor="@color/light_text_color" />

                <TextView
                    android:id="@+id/tv_preferred_dateandtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/light_text_color" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created On"
                    android:textColor="@color/title_text_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right">


                    <TextView
                        android:id="@+id/tv_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed On"
                        android:textColor="@color/title_text_color" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/helveticaneue_bold"
                android:text="Description"
                android:textColor="#333f48"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#333f48"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_attached_pictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneue_bold"
                android:text="Attached Pictures"
                android:textColor="#333f48"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:weightSum="3">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/big_add_icon" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/big_add_icon" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/big_add_icon" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_show_follow_comments"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/helveticaneue_medium"
                android:text="Show Follow-up Comments"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneue_bold"
                android:text="Issue Description*"
                android:textColor="#333f48"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Describe within 1500 characters"
                android:maxLength="1500"
                android:textSize="12sp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:id="@+id/ll_attach"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/helveticaneue_bold"
                    android:text="Upload Images"
                    android:textColor="#333f48"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_open_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_icon"
                    android:padding="10dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="The image format must be jpg/png. Upload up to 3 images, and individual image size should not exceed 5 MB"
                android:textColor="#a0a2a5"
                android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_iv_first_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"

                >

                <ImageView
                    android:id="@+id/iv_first_selected"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_first_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_delete"
                        android:visibility="visible" />
                </LinearLayout>
                />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_iv_second_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_second_selected"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_second_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_delete"
                        android:visibility="visible" />
                </LinearLayout>
                />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_iv_third_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_third_selected"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_third_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_delete"
                        android:visibility="visible" />
                </LinearLayout>
                />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom">
            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/disabled_button"

                android:text="REOPEN REQUEST"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#fff"
                />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/helveticaneue_medium"
            android:textColor="@color/darkest_blue_color"/>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_raise_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="RAISE A NEW REQUEST"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/helveticaneue_medium"
            android:textColor="@color/blue_text_color"/>

    </LinearLayout>

</ScrollView>
</android.support.constraint.ConstraintLayout>