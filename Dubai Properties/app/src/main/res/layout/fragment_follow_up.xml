<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#f7f7f7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/helveticaneue_bold"
                    android:text="Maintenance Request"
                    android:textColor="#585d63"
                    android:textSize="18sp"

                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#929ba2"
                    android:visibility="gone"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_parent_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/tv_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helveticaneue_medium"
                                    android:text="AC Issue"
                                    android:textColor="@color/title_text_color"
                                    android:textSize="@dimen/child_text_Size" />

                                <TextView
                                    android:id="@+id/tv_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"

                                    android:text="SR # id"
                                    android:textColor="@color/light_text_color" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="#fff">


                                <TextView
                                    android:id="@+id/tv_subCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Water Leak"
                                    android:textColor="@color/title_text_color" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right">


                                    <TextView
                                        android:id="@+id/tv_request_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Open"
                                        android:textColor="#f7971e" />

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/dotted_line"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="04/07/18"
                                    android:textColor="@color/light_text_color" />

                                <TextView
                                    android:id="@+id/tv_preferred_dateandtime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:text="09/10/2018, 08:00am-09:00AM"
                                    android:textColor="@color/light_text_color" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="#fff">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Created On"
                                    android:textColor="@color/title_text_color" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Scheduled On"
                                        android:textColor="@color/title_text_color" />

                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/helveticaneue_bold"
                                android:text="Description"
                                android:textColor="#333f48"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="#333f48"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/helveticaneue_bold"
                                android:text="Attached Pictures"
                                android:textColor="#333f48"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:src="@drawable/big_add_icon" />

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"

                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:src="@drawable/big_add_icon" />

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"

                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:src="@drawable/big_add_icon" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_show_follow_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:visibility="gone"
                                android:fontFamily="@font/helveticaneue_medium"
                                android:text="Show Follow-up Comments"
                                android:textColor="@color/dark_blue"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_child_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_follow_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter the reason to follow up on this request*"
                    android:textColor="#333f48"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>

<EditText
    android:id="@+id/et_comment"
android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:maxLength="1500"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:textSize="12sp"

    android:hint="Describe with 1500 characters"

    />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <Button
                    android:id="@+id/bt_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUBMIT"
                    android:background="@color/disabled_button"

                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:layout_gravity="center|bottom"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>