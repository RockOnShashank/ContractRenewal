                        android:onClick="UpdateNumber"
                        android:layout_height="50dp"
                        android:background="#253746"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="SAVE" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
