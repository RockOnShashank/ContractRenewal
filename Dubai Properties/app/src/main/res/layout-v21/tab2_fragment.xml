                        android:layout_width="156dp"
                        android:layout_height="50dp"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:background="@drawable/black_button_border"
                        android:layout_marginRight="5dp"
                        android:text="CANCEL"
                        />

                    <Button
                        android:id="@+id/saveButton"
